@using Microsoft.AspNetCore.Authorization
@using AuthBlocksWeb.HierarchicalAuthorize
@using AuthBlocksWeb.ApiClients
@using AuthBlocksModels.ApiModels
@using NetBlocks.Models
@using AuthBlocksModels.SystemDefinitions

@attribute [HierarchicalRoleAuthorize(SystemRoleConstants.UserAdmin)]
@page "/useradmin/permissions"

<MudCard>
    <MudCardHeader Class="">
        <MudStack Row AlignItems="AlignItems.Center">
            <MudIcon Icon="@Icons.Material.Filled.AccountTree"/>
            <MudText>Role:</MudText>
            <MudSelect T="SystemRole"
                       bind-SelectedValues="">
                @foreach (var role in SystemRole.GetAll())
                {
                    <MudSelectItem Value="@role">@role.Name</MudSelectItem>   
                }
            </MudSelect>
            
        </MudStack>
    </MudCardHeader>
</MudCard>