@using Microsoft.AspNetCore.Authorization
@using AuthBlocksWeb.HierarchicalAuthorize
@using AuthBlocksWeb.ApiClients
@using AuthBlocksModels.ApiModels
@using AuthBlocksModels.SystemDefinitions
@using NetBlocks.Models

@attribute [HierarchicalRoleAuthorize(SystemRoleConstants.UserAdmin)]
@page "/useradmin/users"

<h3>Users</h3>

@if (_users == null)
{
    <p>Loading users...</p>
}
else if (!_users.Any())
{
    <p>No users found.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Roles</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in _users)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@string.Join(", ", user.Roles)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    [Inject]
    private IUsersApiClient UsersApiClient { get; set; } = default!;

    private List<UserInfo>? _users;

    protected override async Task OnInitializedAsync()
    {
        var result = await UsersApiClient.GetUsersAsync();
        if (result.Success && result.Value != null)
        {
            _users = result.Value;
        }
    }
}