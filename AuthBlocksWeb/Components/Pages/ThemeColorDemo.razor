@page "/theme-colors"

<PageTitle>Theme Colors Demo</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudText Typo="Typo.h3" GutterBottom="true" Class="mb-6">
        <MudIcon Icon="Icons.Material.Filled.Palette" Class="mr-3" />
        MudBlazor Theme Colors
    </MudText>

    <MudText Typo="Typo.body1" Class="mb-6">
        This page demonstrates all available colors in the current MudBlazor theme. Each color is shown with its name, hex value, and visual representation.
    </MudText>

    <!-- Primary Colors -->
    <MudPaper Class="pa-4 mb-6" Elevation="2">
        <MudText Typo="Typo.h5" Class="mb-4">Primary Colors</MudText>
        <MudGrid>
            @foreach (var color in PrimaryColors)
            {
                <MudItem xs="12" sm="6" md="4" lg="3">
                    <MudCard Class="mb-2">
                        <MudCardContent Class="pa-2">
                            <div style="background-color: @color.Value; height: 60px; width: 100%; border-radius: 4px; margin-bottom: 8px;"></div>
                            <MudText Typo="Typo.body2" Style="font-weight: 500;">@color.Name</MudText>
                            <MudText Typo="Typo.caption" Style="color: var(--mud-palette-text-secondary);">@color.Value</MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>
    </MudPaper>

    <!-- Secondary Colors -->
    <MudPaper Class="pa-4 mb-6" Elevation="2">
        <MudText Typo="Typo.h5" Class="mb-4">Secondary Colors</MudText>
        <MudGrid>
            @foreach (var color in SecondaryColors)
            {
                <MudItem xs="12" sm="6" md="4" lg="3">
                    <MudCard Class="mb-2">
                        <MudCardContent Class="pa-2">
                            <div style="background-color: @color.Value; height: 60px; width: 100%; border-radius: 4px; margin-bottom: 8px;"></div>
                            <MudText Typo="Typo.body2" Style="font-weight: 500;">@color.Name</MudText>
                            <MudText Typo="Typo.caption" Style="color: var(--mud-palette-text-secondary);">@color.Value</MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>
    </MudPaper>

    <!-- Surface Colors -->
    <MudPaper Class="pa-4 mb-6" Elevation="2">
        <MudText Typo="Typo.h5" Class="mb-4">Surface Colors</MudText>
        <MudGrid>
            @foreach (var color in SurfaceColors)
            {
                <MudItem xs="12" sm="6" md="4" lg="3">
                    <MudCard Class="mb-2">
                        <MudCardContent Class="pa-2">
                            <div style="background-color: @color.Value; height: 60px; width: 100%; border-radius: 4px; margin-bottom: 8px; border: 1px solid var(--mud-palette-divider);"></div>
                            <MudText Typo="Typo.body2" Style="font-weight: 500;">@color.Name</MudText>
                            <MudText Typo="Typo.caption" Style="color: var(--mud-palette-text-secondary);">@color.Value</MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>
    </MudPaper>

    <!-- Status Colors -->
    <MudPaper Class="pa-4 mb-6" Elevation="2">
        <MudText Typo="Typo.h5" Class="mb-4">Status Colors</MudText>
        <MudGrid>
            @foreach (var color in StatusColors)
            {
                <MudItem xs="12" sm="6" md="4" lg="3">
                    <MudCard Class="mb-2">
                        <MudCardContent Class="pa-2">
                            <div style="background-color: @color.Value; height: 60px; width: 100%; border-radius: 4px; margin-bottom: 8px;"></div>
                            <MudText Typo="Typo.body2" Style="font-weight: 500;">@color.Name</MudText>
                            <MudText Typo="Typo.caption" Style="@("color: var(--mud-palette-text-secondary);")">@color.Value</MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>
    </MudPaper>

    <!-- Color Variations Demo -->
    <MudPaper Class="pa-4 mb-6" Elevation="2">
        <MudText Typo="Typo.h5" Class="mb-4">Color Usage Examples</MudText>
        <MudGrid>
            @foreach (var mudColor in Enum.GetValues<Color>().Where(c => c != Color.Inherit && c != Color.Default))
            {
                <MudItem xs="12" sm="6" md="4" lg="3">
                    <MudCard Class="mb-2">
                        <MudCardContent Class="pa-2">
                            <MudButton Color="@mudColor" Variant="Variant.Filled" FullWidth="true" Class="mb-2">
                                @mudColor.ToString()
                            </MudButton>
                            <MudChip T="string" Color="@mudColor" Size="Size.Small">@mudColor.ToString()</MudChip>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>
    </MudPaper>

    <!-- Interactive Color Picker -->
    <MudPaper Class="pa-4 mb-6" Elevation="2">
        <MudText Typo="Typo.h5" Class="mb-4">Interactive Color Demo</MudText>
        <MudSelect T="Color" Label="Select a Color" @bind-Value="selectedColor" AnchorOrigin="Origin.BottomCenter">
            @foreach (var color in Enum.GetValues<Color>().Where(c => c != Color.Inherit && c != Color.Default))
            {
                <MudSelectItem Value="@color">@color.ToString()</MudSelectItem>
            }
        </MudSelect>
        
        <div class="mt-4">
            <MudAlert Severity="Severity.Info">
                <MudText Color="@selectedColor">Selected Color: @selectedColor.ToString()</MudText>
            </MudAlert>
            
            <div class="mt-2">
                <MudButton Color="@selectedColor" Variant="Variant.Filled" Class="mr-2">Filled Button</MudButton>
                <MudButton Color="@selectedColor" Variant="Variant.Outlined" Class="mr-2">Outlined Button</MudButton>
                <MudButton Color="@selectedColor" Variant="Variant.Text">Text Button</MudButton>
            </div>
        </div>
    </MudPaper>
</MudContainer>

