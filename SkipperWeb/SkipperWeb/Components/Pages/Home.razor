@using SkipperWeb.Components.Layout
@using Microsoft.AspNetCore.Components.Authorization
@using SkipperWeb.Components.Redirectors
@using AuthBlocksWeb.HierarchicalAuthorize

@page "/"
@layout MainHomeLayout

@inject NavigationManager NavigationManager

<PageTitle>Home</PageTitle>

<HierarchicalRoleAuthorizeView>
    <Authorized>
        <RedirectToDashboard/>
    </Authorized>
    <NotAuthorized>
        <MudContainer MaxWidth="MaxWidth.Large">
            <MudStack AlignItems="AlignItems.Center">
                <MudImage Fluid="true" Src="img/skipper-hero.png"/>
                <MudText Typo="Typo.h2" Class="bold text-justify">SKIPPER</MudText>
                <MudText Typo="Typo.h6" Class="text-justify">ERP FOR MARINA MANAGEMENT</MudText>
                <MudSpacer/>
                <MudButton Color="Color.Primary" Variant="Variant.Filled" Href="@($"account/login?returnUrl={Uri.EscapeDataString("dashboard")}")">Login</MudButton>
                <MudSpacer/>
                <MudStack Row AlignItems="AlignItems.Center">
                    <MudText Typo="Typo.body2" Color="Color.Tertiary">Have a registration code? </MudText>
                    <MudButton Href="@($"account/register?returnUrl={Uri.EscapeDataString("account/login")}")" Variant="Variant.Outlined">Register Account</MudButton>
                </MudStack>
            </MudStack>
        </MudContainer>
    </NotAuthorized>
</HierarchicalRoleAuthorizeView>
