@using SkipperModels.InputModels
@using SkipperWeb.Components.Pages.Entities

@implements IEditModal<SlipClassificationInputModel>

<EditModelModal TModel="SlipClassificationInputModel"
                Model="Model">
    <EditSlipClassificationForm Model="Model" />
</EditModelModal>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    [Parameter]
    public required SlipClassificationInputModel Model { get; set; }

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(Model));
    }

    private void Cancel()
    {
        MudDialog.Close(DialogResult.Cancel());
    }

}