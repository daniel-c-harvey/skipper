@using SkipperModels.InputModels
@using SkipperWeb.Components.Pages.Entities

@implements IEditModal<SlipInputModel>

<EditModelModal TModel="SlipInputModel"
                Model="Model">
    <EditSlipForm Slip="Model" />
</EditModelModal>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    [Parameter]
    public required SlipInputModel Model { get; set; }

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(Model));
    }

    private void Cancel()
    {
        MudDialog.Close(DialogResult.Cancel());
    }

}