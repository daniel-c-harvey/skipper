@using SkipperModels.InputModels
@using SkipperWeb.Components.Pages.Maintenance.Vessels

<MudDialog>
    <DialogContent>    
        <EditVesselForm Context="_newVessel"/>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Submit</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }
    
    private VesselInputModel _newVessel = new();

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(_newVessel));
    }

    private void Cancel()
    {
        MudDialog.Close(DialogResult.Cancel());
    }

}