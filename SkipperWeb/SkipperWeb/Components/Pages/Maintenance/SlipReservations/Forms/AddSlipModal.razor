@using NetBlocks.Models
@using SkipperModels.InputModels
@using SkipperWeb.Components.Pages.Maintenance.Slips

<MudDialog>
    <DialogContent>    
        <EditSlipForm Slip="_newSlip"/>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Submit</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }
    
    private SlipInputModel _newSlip = new();

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(_newSlip));
    }

    private void Cancel()
    {
        MudDialog.Close(DialogResult.Cancel());
    }

}