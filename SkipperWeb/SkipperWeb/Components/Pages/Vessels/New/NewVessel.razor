@using SkipperModels
@using SkipperModels.Entities
@using SkipperModels.InputModels
@using SkipperModels.Models
@using SkipperWeb.ApiClients
@using SkipperWeb.Components.Pages.Entities.New

@page "/vessels/new"

<NewModelView TInputModel="VesselInputModel"
              TModel="VesselModel"
              TEntity="VesselEntity"
              TClient="VesselClient"
              TClientConfig="VesselClientConfig"
              ModelDisplayName="Vessel"
              PageRoute="vessels">
    <MudGrid Spacing="3">
        <MudItem xs="12" md="6">
            <MudTextField Label="Registration No."
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Outlined.Receipt"
                          @bind-Value="context.RegistrationNumber"
                          For="() => context.RegistrationNumber" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField Label="Vessel Name"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Outlined.DirectionsBoat"
                          @bind-Value="context.Name"
                          For="() => context.Name" />
        </MudItem>

        <MudItem xs="6" md="4">
            <MudNumericField Label="Length"
                             @bind-Value="context.Length"
                             For="() => context.Length"/>
        </MudItem>
        <MudItem xs="6" md="4">
            <MudNumericField Label="Beam"
                             @bind-Value="context.Beam"
                             For="() => context.Beam"/>
        </MudItem>
        <MudItem xs="6" md="4">
            <MudSelect Label="Select Vessel Type"
                       @bind-Value="context.VesselType"
                       For="() => context.VesselType">
                @foreach (VesselType vesselType in Enum.GetValues<VesselType>()) @* todo make the enumeration with full display support *@
                {
                    <MudSelectItem Value="@vesselType">@vesselType</MudSelectItem>
                }
            </MudSelect>
        </MudItem>
    </MudGrid>

</NewModelView>